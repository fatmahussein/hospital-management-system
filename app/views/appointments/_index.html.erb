<% content_for :title, "Appointments" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Appointments</h1>
    <%= link_to "New appointment", new_appointment_path, data: { turbo_frame: "main_content" }, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <% if @appointments.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
        <thead class="bg-gray-100 text-left text-gray-700">
          <tr>
            <th class="px-4 py-3 border-b">#</th>
            <th class="px-4 py-3 border-b">Patient</th>
            <th class="px-4 py-3 border-b">Date</th>
            <th class="px-4 py-3 border-b">Time</th>
            <th class="px-4 py-3 border-b">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @appointments.each_with_index do |appointment, index| %>
            <tr class="<%= index.even? ? 'bg-gray-100' : '' %> hover:bg-blue-50">
              <td class="px-4 py-3"><%= index + 1 %></td>
              <td class="px-4 py-3"><%= appointment.patient.name %></td>
              <td class="px-4 py-3"><%= appointment.date.strftime('%b %d, %Y') %></td>
              <td class="px-4 py-3"><%= appointment.time.strftime('%I:%M %p') %></td>
              <td class="px-4 py-3 space-x-2">
                <%= link_to "Show", appointment, class: "text-blue-600 hover:underline" %>
                <%= link_to "Edit", edit_appointment_path(appointment), class: "text-yellow-600 hover:underline" %>
                <%= button_to "Destroy", appointment, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline bg-transparent border-0 p-0 inline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-center my-10">No appointments found.</p>
  <% end %>
</div>
