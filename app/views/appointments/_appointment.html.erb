<div id="<%= dom_id appointment %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Patient:</strong>
    <%= appointment.patient_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Date:</strong>
    <%= appointment.date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Time:</strong>
    <%= appointment.time %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= appointment.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reason:</strong>
    <%= appointment.reason %>
  </div>
</div>
