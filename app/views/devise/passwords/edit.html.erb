<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8">
    <h2 class="font-bold text-center text-2xl font-syne mb-6 text-gray-800">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500 mb-2 block">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Change my password", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500 mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
