<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8">
    <h2 class="font-bold text-center text-2xl font-syne mb-6 text-gray-800">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
