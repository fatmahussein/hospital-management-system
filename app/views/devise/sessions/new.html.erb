<div class="flex flex-col justify-between items-center mx-auto min-h-screen px-4 py-8 bg-gray-50">
  <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
    <h2 class="font-bold text-center text-2xl font-syne text-gray-800 mb-6">Log in</h2>

    <% if alert %>
      <p class="alert text-red-600 text-sm text-center mb-4 bg-red-100 p-3 rounded-md"><%= alert %></p>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center space-x-2">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500 mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
